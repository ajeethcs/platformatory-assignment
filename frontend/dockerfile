# frontend/Dockerfile

# Build stage
FROM node:20-alpine AS build
WORKDIR /app

# install deps
COPY package.json package-lock.json ./
RUN npm install

# copy source and build
COPY . .
RUN npm run build

# Serve with nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html

# Optional: override nginx.conf if you want custom routing
EXPOSE 80
